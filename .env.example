# ==============================================
# AI Recipe Chef - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Environment (development, staging, production)
NODE_ENV=production

# Server port (Vercel handles this automatically)
PORT=3000

# Frontend URL - UPDATE THIS FOR PRODUCTION
FRONTEND_URL=https://your-app-name.vercel.app

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://your-app-name.vercel.app,https://your-custom-domain.com

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# ==============================================
# OPENAI CONFIGURATION
# ==============================================
# Required: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Organization ID (if using OpenAI organization)
# OPENAI_ORG_ID=org-your-organization-id

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Required: Get from your Supabase project settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Required for admin operations (rate limiting, etc.)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database connection (auto-configured with above)
# DATABASE_URL=postgresql://postgres:[password]@db.[ref].supabase.co:5432/postgres

# ==============================================
# STRIPE CONFIGURATION
# ==============================================
# Required: Get from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key

# Required: Webhook endpoint secret from Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-endpoint-secret

# Required: Premium subscription price ID from Stripe
STRIPE_PREMIUM_PRICE_ID=price_your-premium-subscription-price-id

# Optional: Test mode keys (for development)
# STRIPE_PUBLISHABLE_KEY=pk_test_your-test-publishable-key
# STRIPE_SECRET_KEY=sk_test_your-test-secret-key

# ==============================================
# AMAZON AFFILIATE CONFIGURATION
# ==============================================
# Required: Your Amazon Associates affiliate tag
AMAZON_AFFILIATE_TAG=your-affiliate-tag-20

# Optional: For Amazon Product Advertising API (advanced)
# AMAZON_ACCESS_KEY=your-amazon-access-key
# AMAZON_SECRET_KEY=your-amazon-secret-key
# AMAZON_PARTNER_TAG=your-partner-tag
# AMAZON_REGION=us-east-1

# ==============================================
# REDIS CONFIGURATION (OPTIONAL)
# ==============================================
# Optional: For advanced rate limiting and caching
# Production Redis (e.g., Upstash, Redis Cloud)
# REDIS_URL=redis://default:password@redis-host:port

# Local Redis for development
# REDIS_URL=redis://localhost:6379

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Required: JWT secret for token signing (generate a strong random string)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars

# Password hashing rounds (10-12 recommended)
BCRYPT_ROUNDS=12

# ==============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==============================================
# Optional: For sending notification emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email sender details
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=AI Recipe Chef

# ==============================================
# ANALYTICS CONFIGURATION (OPTIONAL)
# ==============================================
# Optional: Google Analytics 4 measurement ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Optional: Mixpanel token for user analytics
MIXPANEL_TOKEN=your-mixpanel-token

# Optional: PostHog for product analytics
# POSTHOG_API_KEY=your-posthog-api-key
# POSTHOG_HOST=https://app.posthog.com

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features in production

# Enable real Stripe payments (false for demo mode)
ENABLE_REAL_PAYMENTS=true

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable analytics tracking
ENABLE_ANALYTICS=true

# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Enable OpenAI API (false to use mock responses)
ENABLE_OPENAI=true

# ==============================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# ==============================================
# Optional: Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: LogRocket for session replay
# LOGROCKET_APP_ID=your-logrocket-app-id

# Optional: New Relic for performance monitoring
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
# NEW_RELIC_APP_NAME=ai-recipe-chef

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# These should not be used in production

# Development mode features
# DEV_SKIP_AUTH=false
# DEV_MOCK_PAYMENTS=false
# DEV_MOCK_OPENAI=false

# ==============================================
# VERCEL SPECIFIC
# ==============================================
# These are automatically set by Vercel, don't override

# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_REGION=iad1